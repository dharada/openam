<ServicesConfiguration>
    <Service name="ForgerockAMOAuth2Provider" version="1.0">
        <Schema
                i18nFileName="amOAuth2Provider"
                revisionNumber="1"
                i18nKey="oauth2-provider-service-description">
            <Organization>

                <AttributeSchema name="access-token-duration"
                                 type="single"
                                 syntax="number"
                                 i18nKey="">
                    <DefaultValues>
                        <Value>10</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="max-refresh-token-duration"
                                 type="single"
                                 syntax="number"
                                 i18nKey="">
                    <DefaultValues>
                        <Value>2400</Value>
                    </DefaultValues>
                </AttributeSchema>

                <SubSchema name="serverconfig" inheritance="multiple">
                    <AttributeSchema name="oauth2-provider-redirect-uri"
                                     type="single"
                                     syntax="string"
                                     i18nKey="redirectURL">
                        <DefaultValues>
                            <Value>www.example.com:8080/openam/oauth2/redirect</Value>
                        </DefaultValues>
                    </AttributeSchema>
                </SubSchema>

                <SubSchema name="OAuth2ExternalClientProfile" inheritance="multiple">

                    <AttributeSchema name="client-password"
                                     type="single"
                                     syntax="encrypted_password"
                                     i18nKey="a100">
                        <DefaultValues>
                            <Value>&#x00A0;</Value>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="client-type"
                                     type="single_choice"
                                     syntax="string"
                                     validator="RequiredValueValidator"
                                     i18nKey="">
                        <ChoiceValues>
                            <ChoiceValue i18nKey="">Confidential</ChoiceValue>
                            <ChoiceValue i18nKey="">Public</ChoiceValue>
                        </ChoiceValues>
                        <DefaultValues>
                            <Value>Confidential</Value>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="redirection-uris"
                                     type="list"
                                     syntax="string"
                                     i18nKey="">
                        <DefaultValues>
                            <Value>10</Value>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="scopes"
                                     type="list"
                                     syntax="string"
                                     i18nKey="">
                        <DefaultValues>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="presentation-name"
                                     type="single"
                                     syntax="string"
                                     i18nKey="">
                        <DefaultValues>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="presentation-description"
                                     type="single"
                                     syntax="paragraph"
                                     i18nKey="">
                        <DefaultValues>
                        </DefaultValues>
                    </AttributeSchema>

                    <AttributeSchema name="sunIdentityServerDeviceStatus"
                                     type="single_choice"
                                     syntax="string"
                                     validator="RequiredValueValidator"
                                     i18nKey="a101">
                        <ChoiceValues>
                            <ChoiceValue i18nKey="a102">Active</ChoiceValue>
                            <ChoiceValue i18nKey="a103">Inactive</ChoiceValue>
                        </ChoiceValues>
                        <DefaultValues>
                            <Value>Active</Value>
                        </DefaultValues>
                    </AttributeSchema>

                </SubSchema>

            </Organization>
        </Schema>
    </Service>
</ServicesConfiguration>