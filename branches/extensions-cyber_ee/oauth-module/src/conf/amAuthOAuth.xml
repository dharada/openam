<!DOCTYPE ServicesConfiguration
PUBLIC "=//iPlanet//Service Management Services (SMS) 1.0 DTD//EN"
"jar://com/sun/identity/sm/sms.dtd">

<ServicesConfiguration>
    <Service name="iPlanetAMAuthOAuthService" version="1.0">
        <Schema
            serviceHierarchy="/DSAMEConfig/authentication/iPlanetAMAuthOAuthService"
            i18nFileName="amAuthOAuth"
            revisionNumber="1"
            i18nKey="description">

            <Organization>
                <AttributeSchema name="iplanet-am-auth-oauth-client-id"
                                 type="single" syntax="string" i18nKey="a101">
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-oauth-client-secret"
                                 type="single" syntax="string" i18nKey="a102">
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-oauth-auth-service"
                                 type="single" syntax="string" i18nKey="a103">
                        <DefaultValues>
                                <Value>https://www.facebook.com/dialog/oauth</Value>
                        </DefaultValues>
                </AttributeSchema>
		<AttributeSchema name="iplanet-am-auth-oauth-token-service"
				 type="single" syntax="string" i18nKey="a104">
			<DefaultValues>
				<Value>https://graph.facebook.com/oauth/access_token</Value>
			</DefaultValues>
		</AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-oauth-user-profile-service"
                                 type="single" syntax="string" i18nKey="a105">
                        <DefaultValues>
                                <Value>https://graph.facebook.com/me</Value>
                        </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-oauth-scope"
                                 type="single" syntax="string" i18nKey="a106">
                        <DefaultValues>
                                <Value>email,read_stream</Value>
                        </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-oauth-sso-login-url"
                                 type="single" syntax="string" i18nKey="a107">
                        <DefaultValues>
                                <Value>http://sso-server.domain.com/opensso/UI/Login</Value>
                        </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-oauth-sso-proxy-url"
                                 type="single" syntax="string" i18nKey="a108">
                        <DefaultValues>
                                <Value>http://sso-server.domain.com/opensso/config/auth/default/Proxy.jsp</Value>
                        </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="iplanet-am-auth-oauth-auth-level"
                                 type="single" syntax="number_range" rangeStart="0"
				 rangeEnd="2147483647" i18nKey="a500">
                    <DefaultValues>
                        <Value>0</Value>
                    </DefaultValues>
                </AttributeSchema>

                <SubSchema name="serverconfig" inheritance="multiple">
                    <AttributeSchema name="iplanet-am-auth-oauth-auth-level"
                                     type="single" syntax="number_range" rangeStart="0"
				     rangeEnd="2147483647" i18nKey="a500">
                        <DefaultValues>
                            <Value>0</Value>
                        </DefaultValues>
                    </AttributeSchema>
                </SubSchema>
            </Organization>
        </Schema>
        
        <Configuration>
            <OrganizationConfiguration name="/">
                <AttributeValuePair>
                    <Attribute name="iplanet-am-auth-oauth-auth-level"/>
                    <Value>0</Value>
                </AttributeValuePair>
            </OrganizationConfiguration>
        </Configuration>
    </Service>
</ServicesConfiguration>
